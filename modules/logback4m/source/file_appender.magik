_pragma(classify_level=basic, topic={logger})
_method file_appender.new(p_filename, p_layout)
	## Function        : Constructor
	## Parameters      : p_filename: filename append to
	##                   p_layout: layout to use
	## Returns         : self
	_return _clone.init(p_filename, p_layout)
_endmethod
