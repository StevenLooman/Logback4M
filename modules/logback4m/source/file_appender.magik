_pragma(classify_level=basic, topic={logger})
_private _method file_appender.init(p_filename, p_layout)
	## Function        : 
	## Parameters      : 
	## Returns         : 
	.output_stream << external_text_output_stream.new(p_filename)
	.layout << p_layout
	_return _self
_endmethod
